{% include '/common/header.twig' %}

<section class="content">

	<h1>Register</h1>

	{% if signup_completed == true %}

		<div class="notification is-success">
			<strong>Registration completed</strong></br>
			<p>Welcome to Betterlighterpack. You'll receive a verification email in just a second. If it doesn't pop up, check your spam folder.</p>
		</div>

	{% else %}

		<form method="post" action="/register">

			{# Email #}

			{% if errors.user_email is defined %}

				<div class="field">
					<label class="label">email</label>
					<p class="control">
						<input class="input error" type="text" name="user_email" placeholder="you@thetrek.co">
					</p>
					{% for error in errors.user_email %}
						<p class="help">{{ error }}</p>
					{% endfor %}
				</div>				    

			{% elseif form_input.user_email is defined %}

				<div class="field">
					<label class="label">email</label>
					<p class="control">
						<input class="input" type="text" name="user_email" value="{{ form_input.user_email }}">
					</p>
				</div>

			{% else %}

				<div class="field">
					<label class="label">email</label>
					<p class="control">
						<input class="input" type="text" name="user_email" placeholder="you@thetrek.co">
					</p>
				</div>

			{% endif %}

			{# Password #}

			{% if errors.user_password is defined %}

				<div class="field">
					<label class="label">password</label>
					<p class="control">
						<input class="input error" type="password" name="user_password" placeholder="">
					</p>
					{% for error in errors.user_password %}
						<span class="help">{{ error }}</span>
					{% endfor %}
				</div>

			{% else %}

				<div class="field">
					<label class="label">password</label>
					<p class="control">
						<input class="input" type="password" name="user_password" placeholder="">
					</p>
				</div>

			{% endif %}

			{# Password confirm #}

			{% if errors.user_password_confirm is defined %}

				<div class="field">
					<label class="label">confirm password</label>
					<p class="control">
						<input class="input error" type="password" name="user_password_confirm" placeholder="">
					</p>
					{% for error in errors.user_password_confirm %}
						<p class="help">{{ error }}</p>
					{% endfor %}
				</div>

			{% else %}

				<div class="field">
					<label class="label">confirm password</label>
					<p class="control">
						<input class="input" type="password" name="user_password_confirm" placeholder="">
					</p>
				</div>

			{% endif %}

			<input class="button" type="submit" value="register" />

		</form>

	{% endif %}

</section>

{% include '/common/footer.twig' %}
