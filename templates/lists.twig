{% include '/common/header.twig' %}

	<section class="content">

        <h1>Your lists</h1>
		{% if lists is defined and lists is not empty%}
			<ul class="results">
				{% for list in lists %}
					<li><a href="/browse/{{ list.ls_id }}">{{ list.ls_name }}</a></li>
			  	{% endfor %}
			  	<li><a href="#" class="create-list">Start new list</a></li>
			</ul>

		{% else %}
			
			<p>You don't have any lists</p>

		{% endif %}

	</section>

{% include '/common/footer.twig' %}
